def get_setpoint():

	return "%.2f\r\n" %(s)

def setpoint():
	global s
	global j

	args = COMMAND_RECEIVED.split()

	if len(args)>1:
		j = 0
		if (s > t):
			s = t
			s = clip(float(args[1]))
		else:
			s = clip(float(args[1]))

def get_range():

	return "%d\r\n" %(r)

def set_range():

	global r

	args = COMMAND_RECEIVED.split()

	if len(args)>1:
		r = clip(int(args[1]))

