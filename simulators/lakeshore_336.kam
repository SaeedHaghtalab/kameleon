def get_PID():

	return "%.2f,%.2f,%.2f\r\n" %(p,i,d)

def set_PID():

	global p
	global i
	global d

	args = COMMAND_RECEIVED.split()

	if len(args)>3:
		p = clip(float(args[1]))
		i = clip(float(args[2]))
		d = clip(float(args[3]))

def get_tlimit():

